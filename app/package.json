{
  "name": "electron-docker-proof-of-concept",
  "version": "1.0.0",
  "description": "Proof of concept",
  "author": "Simon TÃ¶rnqvist <simon.thornqvist99@gmail.com>",
  "main": "dist/main.js",
  "homepage": "https://not-a-homepage.com",
  "scripts": {
    "start": "rm -rf dist && concurrently \"npm:watch-renderer\" \"npm:watch-main\" \"npm:electron\"",
    "watch-main": "webpack --config webpack.main.config.js --watch --mode development",
    "watch-renderer": "webpack serve --config webpack.renderer.config.js --mode development",
    "electron": "wait-on dist/main.js tcp:3000 && nodemon --watch dist/main.js --exec electron .",
    "build-main": "webpack --config webpack.main.config.js --mode production ",
    "build-renderer": "webpack --config webpack.renderer.config.js --mode production ",
    "build": "npm run build-main && npm run build-renderer"
  },
  "build": {
    "appId": "electron.poc",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "linux": {
      "target": [
        "deb"
      ]
    }
  },
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.8",
    "@babel/preset-react": "^7.23.3",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "electron": "^28.1.4",
    "electron-builder": "^24.9.1",
    "html-webpack-plugin": "^5.6.0",
    "nodemon": "^3.0.3",
    "path-browserify": "^1.0.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
